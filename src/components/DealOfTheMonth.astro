---
import ShopItem from './ShopCard.astro';
import Pagination from './Pagination.astro';

const { products, pageNumber } = Astro.props;
---
<div class='flex flex-col w-full'>
  <div class='grid h-20  bg-base-300 place-items-center text-3xl font-semibold'> Welcome to <span
    class='text-gradient'>the Store!</span>
  </div>
</div>

<div>
 <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe
        src="https://player.vimeo.com/video/846618839?h=bd4b43a99a&autoplay=1&loop=1&title=0&byline=0&portrait=0&muted=1&background=1&controls=0"
        style="position:absolute;top:0;left:0;width:100%;height:100%;"
        loading="lazy"
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen>
    </iframe>
  </div>
</div>

<div class='w-full relative mt-[-20%] bg-white h-fit mb-8'>
  <h1 class='text-2xl leading-8 text-center font-semibold pt-4 align-text-bottom'>Deals of the Month </h1>
  <div
    class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 m-8'
  >
    {products.map(product => (
      <ShopItem product={product}></ShopItem>
    ))}
  </div>
  <Pagination pageNumber={pageNumber} />
</div>
